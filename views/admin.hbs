<h1 class="productH1">Products</h1>
<div class="table-products">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Product</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col">Image</th>
      <th scope="col">Category</th>
      <th scope="col">Time Uploaded</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.inStock}}</td>
      <td>{{this.image}}</td>
      <td>{{this.category}}</td>
      <td>{{this.timeUploaded}}</td>
      <td><button id="deleteProductBTN" type="button" class="btn btn-indigo btn-sm m-0" onclick="editProduct(event)"
          data-id="{{this._id}}">Edit</button></td>
      <td><button type="button" class="btn btn-indigo btn-sm m-0" onclick="deleteProduct(event)"
          data-id="{{this._id}}">Delete</button></td>
    </tr>
    {{/each}}

  </tbody>
</table>
</div>

<div class="h1-users">
  <h1>Users</h1>
</div>

<div class="table-users">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Role</th>


    </tr>
  </thead>
  <tbody>
    {{#each user}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.age}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phoneNumber}}</td>
      <td>{{this.role}}</td>

      <td><button type="button" class="btn btn-indigo btn-sm m-0">Edit</button></td>
      <td><button type="button" class="btn btn-indigo btn-sm m-0">Delete</button></td>
    </tr>
    {{/each}}

  </tbody>
</table>
</div>