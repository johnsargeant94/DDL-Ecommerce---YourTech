<head>
    <link rel="stylesheet" href="Desktop.css">
</head>
<main>
    <section class="jumbotron text-center">
        <div class="container">
            <h1>Desktops</h1>
            <p class="lead text-muted">Desktops for all uses from gaming to office work, see products below.</p>
        </div>
        {{> categoryNav}}
    </section>

    <body>
        <div class="container">
            <div class="row row-cols-3">

                {{#each products}}

                <div class="col">



                    <div class="product">
                        <img src="{{this.image}}" alt="" srcset="" width="300" height="225">
                    </div>
                    <div class="description">
                        <p>{{this.name}}</p>
                        <p>£{{this.price}}</p>
                    </div>

                    <p>Quantity:{{this.inStock}}</p>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="checkout-button">Buy
                            Now</button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="basketBTN"
                            onclick="addToBasket(event)" data-id="{{this._id}}">Basket</button>
                    </div>
                </div>
                {{/each}}
    </body>
</main>
<footer>
    <div class="card">
        <div class="card-header">
            YourTech © 2020
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>Designed by the lads from DDL.</p>
                <footer class="blockquote-footer">John , Shaun , Yusuf <cite title="Source Title">-S-O-T</cite>
                </footer>
            </blockquote>
        </div>
    </div>
</footer>