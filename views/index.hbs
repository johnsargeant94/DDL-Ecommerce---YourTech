<head>
  <link rel="stylesheet" href="index.css">
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
  

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1>Shop</h1>
      <p class="lead text-muted">Best Deals on Tech from Phones to laptops, shop below to see the content.</p>
      <br>
    </div>
    {{> categoryNav}}
  </section>

  <script src="https://js.stripe.com/v3/"></script>

  <div class="container">
    <div class="row row-cols-3">

      {{#each products}}
      <div class="col">
    


        <div class="product">
          <img src="{{this.image}}" alt="" srcset="" width="300" height="225">
        </div>
        <div class="description">
          <p>{{this.name}}</p>
          <p>Â£{{this.price}}</p>
        </div>

        <p>Quantity:{{this.inStock}}</p>
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary" id="checkout-button">Buy Now</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-primary" id="basketBTN" onclick="addToBasket(event)" data-id = "{{this._id}}">Basket</button>
        </div>
      </div>
      {{/each}}

    </div>
  </div>


</main>

<script type="text/javascript">
  // Create an instance of the Stripe object with your publishable API key
  var stripe = Stripe('pk_test_51HlL8yI9F1gcHFZ4iFiaJ19HNXSFNM8b1sNqAq2hvObeOgNubnv8d4w5pimnImMJbYfqBxnYTh7Z3oxpRUQIldwM00qwbonWvm');
  var checkoutButton = document.getElementById("checkout-button");
  checkoutButton.addEventListener("click", function () {
    fetch("/create-session", {
      method: "POST",
    })
      .then(function (response) {
        return response.json();
      })
      .then(function (session) {
        return stripe.redirectToCheckout({ sessionId: session.id });
      })
      .then(function (result) {
        // If redirectToCheckout fails due to a browser or network
        // error, you should display the localized error message to your
        // customer using error.message.
        if (result.error) {
          alert(result.error.message);
        }
      })
      .catch(function (error) {
        console.error("Error:", error);
      });
  });
</script>
