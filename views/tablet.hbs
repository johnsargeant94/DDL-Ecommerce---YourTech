<head>
    <link rel="stylesheet" href="Tablet.css">
</head>
<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1>Tablets</h1>
            <p class="lead text-muted">Tablets for those days you need to be on the move.</p>
        </div>
        {{> categoryNav}}
    </section>


    <body>
        <div class="container">
            <div class="row row-cols-3">

                {{#each products}}
                <div class="col">



                    <div class="product">
                        <img src="{{this.image}}" alt="" srcset="" width="300" height="225">
                    </div>
                    <div class="description">
                        <p>{{this.name}}</p>
                        <p>£{{this.price}}</p>
                    </div>

                    <p>Quantity:{{this.inStock}}</p>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="checkout-button">Buy
                            Now</button>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="basketBTN"
                            onclick="addToBasket(event)" data-id="{{this._id}}">Basket</button>
                    </div>
                </div>
                {{/each}}
    </body>
</main>
<footer>
    <div class="card">
        <div class="card-header">
            YourTech © 2020 - tablet
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>Designed by the lads from DDL.</p>
                <footer class="blockquote-footer">John , Shaun , Yusuf <cite title="Source Title">-S-O-T</cite>
                </footer>
            </blockquote>
        </div>
    </div>
</footer>